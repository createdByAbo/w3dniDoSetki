@using w3dniDoSetki.Services
@using w3dniDoSetki.Models.DTOs
@model w3dniDoSetki.Models.DTOs.LoginDto;
@inject IUserService UserService;
<!DOCTYPE html>
<html>
<head>
    <title>Login Form</title>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-control mx-auto" style="width: 20%;">
                    @Html.EditorFor(dto => dto.Email)
                    @Html.LabelFor(dto => dto.Email)
                </div>
                <div class="form-control mx-auto" style="width: 20%;">
                    @Html.EditorFor(dto => dto.Password)
                    @Html.LabelFor(dto => dto.Password)
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>

</body>
</html>