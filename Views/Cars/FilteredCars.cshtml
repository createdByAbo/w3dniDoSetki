@{
    Layout = "_Layout";
}
@model List<w3dniDoSetki.Models.DTOs.CarCardDto>;
@{
    var data = Model;
    for (int i = 0; i < Model.Count; i++)
    {
        {
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@data[i].imgPath.Replace("wwwroot", "")" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@data[i].Price PLN</h5>
                            <h5 class="card-title">@data[i].Brand</h5>
                            <h5 class="card-title">@data[i].Model</h5>
                            <p class="card-text">@data[i].ProdYear.Year</p>
                            <p class="card-text"><small class="text-muted">
                                <strong>@data[i].Title</strong>
                            </small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}